{
  "name": "api",
  "version": "0.4.1",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-socket.io-session": "^1.3.5",
    "fs-extra": "^7.0.0",
    "morgan": "^1.9.0",
    "multer": "^1.3.1",
    "node-args": "^2.1.8",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.38.0",
    "socket.io": "^2.1.1",
    "sql-formatter": "^2.3.1",
    "tough-cookie": "^2.4.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.5.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.2",
    "sequelize-cli": "^4.0.0",
    "supertest": "^3.1.0"
  },
  "scripts": {
    "db:create": "CAH_DB_USER=\"$CAH_DB_ROOT_USER\" CAH_DB_PASSWORD=\"$CAH_DB_ROOT_PASSWORD\" yarn sequelize db:create --config src/config.js",
    "db:drop": "CAH_DB_USER=\"$CAH_DB_ROOT_USER\" CAH_DB_PASSWORD=\"$CAH_DB_ROOT_PASSWORD\" yarn sequelize db:drop --config src/config.js",
    "db:migrate": "yarn sequelize db:migrate --config src/config.js",
    "db:seed": "yarn sequelize db:seed:all --config src/config.js --models-path src/models",
    "db:reset": "yarn db:drop; yarn db:create && yarn db:migrate && yarn db:seed",
    "db:truncate": "for t in answer gameturn game player question choice; do echo \"TRUNCATE TABLE $t CASCADE;\"; done | psql -U $CAH_DB_USER -h $CAH_DB_HOST $CAH_DB_NAME",
    "start": "NODE_ENV=development nodemon index.js",
    "start:debug": "NODE_ENV=development nodemon --inspect index.js",
    "test": "NODE_ENV=test mocha --exit --recursive --timeout 5000",
    "test:debug": "yarn test --inspect --watch",
    "test:coverage": "nyc -x migrations yarn test",
    "lint": "eslint index.js src"
  },
  "bin": {
    "cah": "./cli/index.js"
  }
}
