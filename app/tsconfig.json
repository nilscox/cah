{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2017"],
    "outDir": "./dist",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "dtos/*": ["../dtos/*"]
    }
  },
  "include": [
    "src/**/*",
    "../dtos"
  ]
}
