{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*"],
  "references": [{ "path": "../client" }, { "path": "../store" }, { "path": "../shared" }],
  "compilerOptions": {
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest/globals"],
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  }
}
