  },
  "scripts": {
    "db:create": "CAH_DB_USER=\"$CAH_DB_ROOT_USER\" CAH_DB_PASSWORD=\"$CAH_DB_ROOT_PASSWORD\" yarn sequelize db:create",
    "db:drop": "CAH_DB_USER=\"$CAH_DB_ROOT_USER\" CAH_DB_PASSWORD=\"$CAH_DB_ROOT_PASSWORD\" yarn sequelize db:drop",
    "db:migrate": "yarn sequelize db:migrate",
    "db:reset": "yarn db:drop && yarn db:create && yarn db:migrate",
    "start": "nodemon index.js"
  }
